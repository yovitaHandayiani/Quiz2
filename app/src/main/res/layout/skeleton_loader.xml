<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Profile skeleton -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <View
            android:id="@+id/skeleton_avatar"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/skeleton_background" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:orientation="vertical">

            <View
                android:id="@+id/skeleton_name"
                android:layout_width="150dp"
                android:layout_height="18dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/skeleton_background" />

            <View
                android:id="@+id/skeleton_subtitle"
                android:layout_width="240dp"
                android:layout_height="14dp"
                android:background="@drawable/skeleton_background" />
        </LinearLayout>
    </LinearLayout>

    <!-- Content skeleton -->
    <View
        android:id="@+id/skeleton_line1"
        android:layout_width="match_parent"
        android:layout_height="16dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/skeleton_background" />

    <View
        android:id="@+id/skeleton_line2"
        android:layout_width="match_parent"
        android:layout_height="16dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/skeleton_background" />

    <View
        android:id="@+id/skeleton_line3"
        android:layout_width="240dp"
        android:layout_height="16dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/skeleton_background" />

</LinearLayout>